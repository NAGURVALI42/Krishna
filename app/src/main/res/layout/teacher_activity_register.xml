<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrd_vv"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="wrap_content"
            android:layout_height="317dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/tro" />

        <!-- Title -->
        <TextView
            android:id="@+id/register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Register"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/register_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:text="You're just a few steps away, just provide some details below to register."
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <!-- Form Background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="20dp">

            <!-- Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/vector2"
                    android:layout_gravity="center_vertical"
                    app:tint="#D81B60" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:padding="10dp"
                    android:textColorHint="#A0A0A0"
                    android:background="@null"/>
            </LinearLayout>

            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/vector1"
                    android:layout_gravity="center_vertical"
                    app:tint="#D81B60" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:padding="10dp"
                    android:textColorHint="#A0A0A0"
                    android:background="@null"/>
            </LinearLayout>

            <!-- Username -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/vector2"
                    android:layout_gravity="center_vertical"
                    app:tint="#D81B60" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:padding="10dp"
                    android:textColorHint="#A0A0A0"
                    android:background="@null"/>
            </LinearLayout>

            <!-- Password -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/vector4"
                    android:layout_gravity="center_vertical"
                    app:tint="#D81B60" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColorHint="#A0A0A0"
                    android:background="@null"/>
            </LinearLayout>

            <!-- Confirm Password -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/vector4"
                    android:layout_gravity="center_vertical"
                    app:tint="#D81B60" />

                <EditText
                    android:id="@+id/confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColorHint="#A0A0A0"
                    android:background="@null"/>
            </LinearLayout>

            <!-- Role Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select your role:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="20dp" />

            <RadioGroup
                android:id="@+id/role_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:id="@+id/radio_student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student"
                    android:textColor="#000000" />

                <RadioButton
                    android:id="@+id/radio_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teacher"
                    android:textColor="#000000"
                    android:layout_marginStart="20dp"/>
            </RadioGroup>

            <!-- Teacher ID Field -->
            <LinearLayout
                android:id="@+id/teacher_id_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#E0E0E0"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/vector2"
                    android:layout_gravity="center_vertical"
                    app:tint="#D81B60" />

                <EditText
                    android:id="@+id/teacher_id_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Teacher ID"
                    android:padding="10dp"
                    android:textColorHint="#A0A0A0"
                    android:background="@null"/>
            </LinearLayout>

            <!-- Student ID Field (NEW ADDITION) -->
            <LinearLayout
                android:id="@+id/student_id_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#E0E0E0"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/vector2"
                    android:layout_gravity="center_vertical"
                    app:tint="#D81B60" />

                <EditText
                    android:id="@+id/student_id_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Student ID"
                    android:padding="10dp"
                    android:textColorHint="#A0A0A0"
                    android:background="@null"/>
            </LinearLayout>

            <!-- Register Button -->
            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Register"
                android:textStyle="bold"
                android:backgroundTint="#0312c9"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"/>

            <!-- Sign In Text -->
            <TextView
                android:id="@+id/sign_in_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? Sign in"
                android:textSize="14sp"
                android:textColor="#0312c9"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
