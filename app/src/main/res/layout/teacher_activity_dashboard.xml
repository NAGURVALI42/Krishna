<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1218C3">

    <!-- Profile Section -->
    <LinearLayout
        android:id="@+id/profile_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/snv"
        android:gravity="center"
        android:paddingTop="35dp"
        android:paddingHorizontal="16dp"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/student" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textColor="#000"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Search Bar with Chat Icon -->
    <LinearLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/profile_section"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/rounded_searchbar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/chat"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hey Hi.... "
            android:textStyle="bold"
            android:paddingHorizontal="10dp"
            android:textSize="22sp"/>
    </LinearLayout>

    <!-- Dashboard Items -->
    <GridLayout
        android:id="@+id/dashboard_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="16dp"
        android:background="@android:color/white"
        android:layout_alignParentStart="true"
        android:columnCount="2">

        <!-- Notices -->
        <LinearLayout
            android:id="@+id/notices_section"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="83dp"
                android:src="@drawable/notices" />

            <TextView
                android:layout_width="79dp"
                android:layout_height="30dp"
                android:text="Notices"
                android:textColor="#000"
                android:textSize="17sp" />
        </LinearLayout>

        <!-- Events -->
        <LinearLayout
            android:id="@+id/event_layout"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:src="@drawable/events" />

            <TextView
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:text="Events"
                android:textColor="#000"
                android:textSize="17sp" />
        </LinearLayout>

        <!-- Add Work -->
        <LinearLayout
            android:id="@+id/add_work"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="88dp"
                android:layout_height="78dp"
                android:src="@drawable/work" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="Add Work"
                android:textColor="#000"
                android:textSize="17sp" />
        </LinearLayout>

        <!-- Schedule -->
        <LinearLayout
            android:id="@+id/time_table"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="112dp"
                android:layout_height="82dp"
                android:src="@drawable/schedule" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule"
                android:textColor="#000"
                android:textSize="17sp" />
        </LinearLayout>

        <!-- Achievement -->
        <LinearLayout
            android:id="@+id/achiev"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:src="@drawable/achiev" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Achievement"
                android:textColor="#000"
                android:textSize="17sp" />
        </LinearLayout>

        <!-- Settings -->
        <LinearLayout
            android:id="@+id/setting"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="1dp">

            <ImageView
                android:layout_width="83dp"
                android:layout_height="91dp"
                android:src="@drawable/set" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="#000"
                android:textSize="17sp" />
        </LinearLayout>
    </GridLayout>

</RelativeLayout>
